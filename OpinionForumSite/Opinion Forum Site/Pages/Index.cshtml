@page
@model Opinion_Forum_Site.Pages.Opinions.IndexModel
@{
    ViewData["Title"] = "Home page";
}

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<body>
    <div class="text-center">
        <h1 class="display-4">Recent Posts</h1>
    </div>
    <p>
        <a asp-page="Create">Create Your Own</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Opinion[0].Title)
                </th>
                <th>
                    Poster
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Opinion)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @if (Equals(@item.Username, User.Identity.Name))
                        {
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                            <a> | </a>
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            <a> | </a>
                            <a asp-page="./Details" asp-route-id="@item.ID">View</a>
                        }
                        else
                        {
                            <a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                            <a asp-page="./Details" asp-route-id="@item.ID">View</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>