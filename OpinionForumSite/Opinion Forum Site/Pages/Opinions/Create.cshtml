@page
@model Opinion_Forum_Site.Pages.Opinions.CreateModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4 class="page-title">Create Your Post Below!</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Opinion.Title" class="control-label">Post Title</label>
                    <input asp-for="Opinion.Title" class="form-control" maxlength="30"/>
                    <span asp-validation-for="Opinion.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opinion.OpinionText" class="control-label">Post Text</label>
                    <br>
                    <textarea asp-for="Opinion.OpinionText" class="control-label" rows="5" cols="100" maxlength="200"></textarea>
                    <span asp-validation-for="Opinion.OpinionText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="standard-link" asp-page="Index">Back To All Posts</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
