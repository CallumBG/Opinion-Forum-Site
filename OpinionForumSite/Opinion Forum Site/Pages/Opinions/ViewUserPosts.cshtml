@page
@model Opinion_Forum_Site.Pages.Opinions.ViewUserPostsModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewUserPosts</title>
</head>
<body>
    <div class="text-center">
        <h1 class="page-title">Your Posts</h1>
    </div>
    <p>
        <a class="create-link" asp-page="Create">Create New</a>
    </p>
    <h4>Search For A Topic</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ShowSearchResults">
                <div class="form-group">
                    <label for="SearchPhrase" class="control-label"></label>
                    <input name="SearchPhrase" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a id="see-full-list-link" asp-action="Index">See full list</a>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Opinion[0].Title)
                </th>
                <th>
                    Posted By
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Opinion)
            {
                if (Equals(@item.Username, User.Identity.Name))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                            <a> | </a>
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                            <a> | </a>
                            <a asp-page="./Details" asp-route-id="@item.ID">View</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</body>
</html>
